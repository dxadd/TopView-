<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<!--龙母管理驯龙高手页面-->
<GridPane fx:controller="sample.Leader_Update_Admin"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <VBox layoutX="0.0" layoutY="0.0" minHeight="600" prefWidth="650" spacing="10">
        <padding>
            <Insets top="30.0"/>
        </padding>
        <HBox minHeight="100" prefHeight="100" prefWidth="100" spacing="10">

            <children>
                <!--                        文本输入框-->
                <TextField fx:id="LeaderTextFile" minHeight="50" minWidth="500" promptText="请输入你要搜索的驯龙高手的编号或种族"
                           GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <!--                        搜索按钮-->
                <Button id="btn_search" mnemonicParsing="false" onAction="#leaderSearch" minHeight="50"
                        minWidth="80" text="搜索编号" GridPane.columnIndex="3" GridPane.halignment="RIGHT"
                        GridPane.rowIndex="0">

                </Button>
                <!--                        查询种族某个种族的驯龙高手-->
                <Button id="btn_queryRace" mnemonicParsing="false" onAction="#leaderQueryRace" minHeight="50"
                        minWidth="80" text="搜索种族" GridPane.columnIndex="2" GridPane.halignment="RIGHT"
                        GridPane.rowIndex="0">

                </Button>


            </children>
        </HBox>
        <TextArea fx:id="LeaderTextArea" minHeight="500" minWidth="600" GridPane.columnIndex="0"
                  GridPane.rowIndex="1"/>
        <HBox minHeight="100" prefHeight="100" prefWidth="100" spacing="10">

            <children>

                <!--                        增加驯龙高手-->
                <Button id="addAdmin" mnemonicParsing="false" onAction="#addAdmin" minHeight="50" minWidth="100"
                        text="增加驯龙高手" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="2">

                </Button>
                <!--                        修改驯龙高手的信息-->
                <Button id="updateAdmin" mnemonicParsing="false" onAction="#updateAdmin" minHeight="50"
                        minWidth="100" text="修改驯龙高手" GridPane.columnIndex="2" GridPane.halignment="RIGHT"
                        GridPane.rowIndex="2">

                </Button>
                <!--                        查询所有驯龙高手的信息-->
                <Button id="queryAdmin" mnemonicParsing="false" onAction="#queryAdmin" minHeight="50" minWidth="100"
                        text="查询驯龙高手" GridPane.columnIndex="4" GridPane.halignment="RIGHT" GridPane.rowIndex="2">

                </Button>
                <!--                        删除驯龙高手-->
                <Button id="deleteAdmin" mnemonicParsing="false" onAction="#deleteAdmin" minHeight="50"
                        minWidth="100" text="删除驯龙高手" GridPane.columnIndex="6" GridPane.halignment="RIGHT"
                        GridPane.rowIndex="2">

                </Button>
                <!--                        返回上一层-->
                <Button id="adminBack" mnemonicParsing="false" onAction="#back" minHeight="50" minWidth="100"
                        text="返回" GridPane.columnIndex="8" GridPane.halignment="RIGHT" GridPane.rowIndex="2">

                </Button>

            </children>
        </HBox>
    </VBox>
</GridPane>